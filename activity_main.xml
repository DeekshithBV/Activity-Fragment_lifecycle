<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_frag1"
            android:layout_width="@dimen/_0sp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sp"
            android:layout_weight="1"
            android:backgroundTint="#166EDA"
            android:text="@string/frag1"
            android:textSize="@dimen/_24sp" />

        <Button
            android:id="@+id/btn_frag2"
            android:layout_width="@dimen/_0sp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sp"
            android:layout_weight="1"
            android:backgroundTint="#077C36"
            android:text="@string/frag2"
            android:textSize="@dimen/_24sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
